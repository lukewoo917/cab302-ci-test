<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="30.0" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controller.MainMenuController"
      prefWidth="1000.0" prefHeight="600.0">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <!-- ===== HEADER SECTION ===== -->
    <HBox spacing="10" prefWidth="1000.0">
        <!-- Column 1: Profile Button -->
        <VBox alignment="CENTER_LEFT" prefWidth="165.0">
            <Button fx:id="profileButton" text="Profile" onAction="#onProfileButtonClick"/>
        </VBox>

        <!-- Column 2: Heading -->
        <VBox alignment="CENTER" prefWidth="580.0">
            <Label fx:id="welcomeLabel" text="Welcome back User"/>
        </VBox>

        <!-- Column 3: Empty space (for balance) -->
        <VBox alignment="CENTER_RIGHT" prefWidth="165.0"/>
    </HBox>

    <!-- MAIN ACTIONS SECTION -->
    <VBox alignment="CENTER" spacing="10">
        <Button fx:id="playButton" text="Play" onAction="#onPlayButtonClick"/>
        <Button fx:id="instructionButton" text="How to Play" onAction="#onInstructionButtonClick"/>
        <Button fx:id="logOutButton" text="Log Out" onAction="#onLogOutButtonClick"/>
    </VBox>

</VBox>
