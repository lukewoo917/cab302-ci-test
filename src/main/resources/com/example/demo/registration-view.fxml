<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controller.RegistrationController"
      alignment="CENTER" spacing="20.0">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <!-- Title -->
    <Label fx:id="welcomeText" text="Create your ReadRacer account" styleClass="heading"/>
    <Label fx:id="instructionText" text="Please fill in your details" styleClass="heading"/>

    <!-- Form fields -->
    <VBox alignment="CENTER_LEFT" spacing="5" styleClass="vbox-background">
        <Label text="Username:" styleClass="requests"/>
        <TextField fx:id="usernameField" promptText="Enter your username"/>

        <Label text="Email:" styleClass="requests"/>
        <TextField fx:id="emailField" promptText="Enter your email"/>

        <Label text="Password:" styleClass="requests"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password"/>

        <Label text="Confirm Password:" styleClass="requests"/>
        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password"/>

        <Label fx:id="errorLabel" style="-fx-text-fill: red" layoutX="40" layoutY="180" />
    </VBox>

    <!-- Bottom buttons -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="cancelButton" text="Cancel" onAction="#onCancelButtonClick"/>
        <Button fx:id="confirmButton" text="Confirm" onAction="#onConfirmButtonClick"/>
    </HBox>

</VBox>
