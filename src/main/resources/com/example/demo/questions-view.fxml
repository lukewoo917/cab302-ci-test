<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" spacing="30.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controller.QuestionsController">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <!--header -->
    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="questionsLabel"
               text="Quiz"
               styleClass="heading"
        />

        <!--  Placeholder for countdown timer display      -->
        <Label fx:id="timerLabel" text="04:00" styleClass="heading"/>
    </VBox>

    <!-- main content -->
    <VBox alignment="CENTER" spacing="10" fx:id="questionsContainer" styleClass="vbox-background">
        <!-- placeholder for questions -->
    </VBox>

    <!-- submit -->
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="submitButton" text="Submit" onAction="#onSubmitButtonClick"/>
    </HBox>

</VBox>
