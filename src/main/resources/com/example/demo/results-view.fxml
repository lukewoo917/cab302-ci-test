<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controller.ResultsController">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <!-- Header-->
    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label fx:id="resultsLabel"
               text="Results"
               styleClass="heading"
        />
    </VBox>

    <!-- Score and Buttons -->
    <VBox alignment="CENTER" spacing="10">

        <HBox alignment="CENTER" spacing="10.0">
            <StackPane>
                <Circle radius="100" fill="#F9C5D5" stroke="#6B6B6B" strokeWidth="5"/>
                <Label fx:id="scoreLabel" alignment="CENTER" styleClass="score" prefWidth="350" text="0/10" />
            </StackPane>
            <VBox spacing="10.0">
                <Button fx:id="leaderboardButton" onAction="#onLeaderboardButtonClick" text="Leaderboard" styleClass="sideButton" />
                <Button fx:id="reviewAnswerButton" onAction="#onReviewAnswerButtonClick" text="Review Answers" styleClass="sideButton" />
            </VBox>
        </HBox>
        <Button fx:id="homeButton" text="Home" onAction="#onHomeButtonClick"/>
        <Button fx:id="playAgainButton" text="Play Again" onAction="#onPlayAgainButtonClick"/>

    </VBox>

</VBox>
