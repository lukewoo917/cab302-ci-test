<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="30.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.demo.controller.LeaderboardController">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <!-- Heading -->
    <VBox alignment="CENTER_LEFT" spacing="5">
        <Label text="Leaderboard"
               styleClass="heading"
        />
    </VBox>

    <!-- Scrollable text area -->
    <TextArea wrapText="true"
              prefHeight="400.0"
              prefWidth="500.0"
              editable="false"
              text="Add leaderboard contents in this box."/>

    <!-- Back button -->
    <Button text="Back" fx:id="backButton" onAction="#onBackButtonClick" />

</VBox>